<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <!-- Use col-12 on mobile and center form on larger screens -->
  <div class="col-12 col-md-8 offset-md-2">
    <h2 class="text-center">Edit Listing</h2>
    <form
      action="/listings/<%= edit._id %>?_method=PUT"
      method="POST"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          value="<%= edit.title %>"
          name="listing[title]"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required>
<%= edit.description %></textarea
        >
        <div class="valid-feedback">Description looks good</div>
      </div>

      <div class="mb-3">
        <p>Original image</p>
        <!-- Make image responsive -->
        <img
          src="<%= originalImgUrl %>"
          alt="Original Image"
          class="img-fluid"
        />
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload new image</label>
        <input type="file" name="listing[image]" class="form-control" />
      </div>

      <div class="row">
        <!-- On mobile, these columns stack (col-12), on md+ they sit side by side -->
        <div class="mb-3 col-12 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            value="<%= edit.price %>"
            name="listing[price]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price should be valid!</div>
        </div>

        <div class="mb-3 col-12 col-md-8">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            value="<%= edit.location %>"
            name="listing[location]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location should be valid!</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          type="text"
          value="<%= edit.country %>"
          name="listing[country]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Country should be valid!</div>
      </div>

      <button type="submit" class="btn btn-outline-dark edit-btn mt-3">
        Edit
      </button>
      <br /><br />
    </form>
  </div>
</div>

