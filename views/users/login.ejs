<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="mb-3 col-6 offset-3 mt-3">
    <h2>Login to wonderlust</h2>
    <form action="/login" novalidate class="needs-validation" method="POST">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          id="username"
          class="form-control"
          name="username"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          id="password"
          class="form-control"
          name="password"
          required
        />
      </div>
      <button class="btn btn-outline-success">Login</button>
    </form>
  </div>
</div>
